{
  "data": {
    "url": "data/cars.json"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "aggregate": "mean",
      "field": "Horsepower",
      "type": "quantitative"
    },
    "y": {
      "field": "Cylinders",
      "type": "ordinal",
      "scale": {
        "rangeStep": 12
      }
    },
    "row": {
      "field": "Origin",
      "type": "nominal"
    }
  },
  "config": {
    "overlay": {
      "line": true
    },
    "scale": {
      "useUnaggregatedDomain": true
    }
  }
}