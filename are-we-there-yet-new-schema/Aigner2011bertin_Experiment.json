          },
          {
            "transform": [
              {
                "lookup": "n",
                "from": { "param": "index", "key": "n" }
              },
              {
                "calculate": "datum.index && datum.index.q > 0 ? (datum.q - datum.index.q)/datum.index.q : 0",
                "as": "indexed_q"
              }
            ],
            "mark": "line",
            "encoding": {
              "x": { "field": "t", "type": "temporal", "axis": null },
              "y": {
                "field": "indexed_q",
                "type": "quantitative",
                "axis": { "format": "%" }
              },
              "color": { "field": "n", "type": "nominal" }
            }
          },
          {
            "transform": [{ "filter": { "param": "index" } }],
            "encoding": {
              "x": { "field": "t", "type": "temporal", "axis": null },
              "color": { "value": "firebrick" }
            },
            "layer": [
              { "mark": { "type": "rule", "strokeWidth": 0.5 } },
